<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#FCF2D9"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Coffee Image -->
        <ImageView
            android:id="@+id/coffeeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"/>

        <!-- Text & Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/coffeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#834D1E"/>

            <TextView
                android:id="@+id/coffeePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $4.99"
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/coffeeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A smooth, rich blend of espresso..."
                android:textSize="13sp"
                android:textColor="#666"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:scrollHorizontally="false"/>
        </LinearLayout>

        <!-- Add (+) Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addCoffeeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:backgroundTint="#834D1E"
            app:cornerRadius="8dp"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

