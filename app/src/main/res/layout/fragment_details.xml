<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    tools:context=".presentation.screens.details_screen.DetailsFragment">

    <ImageView
        android:id="@+id/imgDrink"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/drink_image"
        android:scaleType="centerCrop"
        android:src="@drawable/sample"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/close"
        android:contentDescription="@string/back"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Favorite button -->
    <ImageButton
        android:id="@+id/btnFavorite"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_nav_bar_favorite_selector"
        android:contentDescription="@string/favorite"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Details container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/detailsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/coffee_card_gradient"
            android:padding="24dp">

            <!-- Drink Title -->
            <TextView
                android:id="@+id/tvDrinkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iced_coffee_sweet_heaven"
                android:textStyle="bold"
                android:textColor="#834D1E"
                android:textSize="24sp"/>

            <!-- Drink Description -->
            <TextView
                android:id="@+id/tvDrinkDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/double_espresso_with_condensed_milk_served_cold"
                android:textColor="#834D1E"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="2dp"/>

            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 24.000"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#834D1E"
                android:layout_marginTop="12dp"/>

            <!-- Quantity and Buy Now -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/quantity_control_bg"
                    android:padding="4dp"
                    android:layout_marginEnd="16dp">

                    <ImageButton
                        android:id="@+id/btnMinus"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_minus"
                        android:background="@drawable/btn_buy_now_bg"
                        android:contentDescription="Decrease quantity"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="16sp"
                        android:textColor="#2C1810"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="8dp"/>

                    <ImageButton
                        android:id="@+id/btnPlus"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_plus"
                        android:background="@drawable/btn_buy_now_bg"
                        android:contentDescription="Increase quantity"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Buy Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBuyNow"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/buy_now"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_buy_now_bg"
                    android:elevation="4dp"/>
            </LinearLayout>

            <!-- Favorites Status (Initially hidden) -->
            <LinearLayout
                android:id="@+id/favoritesStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saved_to_favorites"
                    android:textColor="#2C1810"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnDone"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Done"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_done_bg"
                    android:paddingHorizontal="32dp"
                    android:elevation="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>