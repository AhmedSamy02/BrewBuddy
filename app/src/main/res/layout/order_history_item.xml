<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#FCF2D9"
        app:strokeColor="#834D1E"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sample"
                    android:background="@drawable/coffee_card_gradient" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/orderQuantity_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1x "
                            android:textStyle="bold"
                            android:textColor="#834D1E"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/orderName_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hot Cappucino"
                            android:textStyle="bold"
                            android:textColor="#834D1E"
                            android:textSize="16sp"
                            android:layout_weight="2.9"/>

                        <TextView
                            android:id="@+id/date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28/01"
                            android:textColor="#834D1E"
                            android:textSize="14sp"
                            android:layout_weight="0.1"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/details_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/details"
                        android:textStyle="bold"
                        android:textColor="#834D1E"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expandedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"

                        app:tint="#834D1E" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Price:"
                        android:textColor="#834D1E"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/totalPrice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RP0.00"
                        android:textColor="#834D1E"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_promo"
                        android:layout_marginEnd="12dp"
                        app:tint="#834D1E" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Promo:"
                        android:textColor="#834D1E"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/promo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-RP0.00"
                        android:textColor="#834D1E"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_delivery"
                        android:layout_marginEnd="12dp"
                        app:tint="#834D1E" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delivery Fee:"
                        android:textColor="#834D1E"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/deliveryFee_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp0.00"
                        android:textColor="#834D1E"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_packaging"
                        android:layout_marginEnd="12dp"
                        app:tint="#834D1E" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Packaging Fee:"
                        android:textColor="#834D1E"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/packagingFee_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RP0.00"
                        android:textColor="#834D1E"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_address"
                        android:layout_marginEnd="12dp"
                        app:tint="#834D1E" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Address:"
                        android:textColor="#834D1E"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#834D1E"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>