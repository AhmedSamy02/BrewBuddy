<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SegmentButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/SegmentShape</item>
        <item name="android:textColor">@color/segment_text_selector</item>
        <item name="strokeColor">#834D1E</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">@color/segment_bg_selector</item>
    </style>

    <style name="SegmentShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>