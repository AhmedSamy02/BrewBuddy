<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.BrewBuddy" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <!-- App theme -->
    <style name="Theme.BrewBuddy" parent="Base.Theme.BrewBuddy">
        <item name="android:fontFamily">@font/inter_font</item>
        <item name="android:statusBarColor">@color/secondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <!-- Custom button style (optional) -->
    <style name="BrewBuddyButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Popup menu style -->
    <style name="CustomPopupMenu" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:divider">@drawable/menu_divider</item>
    </style>
</resources>
